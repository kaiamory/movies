<%= form_with(model: @review, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :stars %>

    <%= f.text_field :stars, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review_text %>

    <%= f.text_field :review_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :movie_id %>

    <%= f.collection_select :movie_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :director_id, value: @director.id %>

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
